{
  "openapi": "3.0.3",
  "info": {
    "title": "StockPlay API",
    "version": "1.0.0",
    "description": "REST API for StockPlay portfolio management, tracking, and leaderboards."
  },
  "servers": [
    { "url": "https://api.stockplay.example.com", "description": "Production" },
    { "url": "http://localhost:3000", "description": "Local" }
  ],
  "tags": [
    { "name": "auth" },
    { "name": "users" },
    { "name": "portfolios" },
    { "name": "holdings" },
    { "name": "transactions" },
    { "name": "leaderboard" },
    { "name": "stocks" },
    { "name": "broker" },
    { "name": "payments" },
    { "name": "webhooks" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "details": { "type": "object", "additionalProperties": true }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": { "type": "integer", "minimum": 1 },
          "pageSize": { "type": "integer", "minimum": 1, "maximum": 100 },
          "total": { "type": "integer" },
          "nextCursor": { "type": "string", "nullable": true }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "email": { "type": "string", "format": "email" },
          "displayName": { "type": "string" },
          "avatarUrl": { "type": "string", "nullable": true },
          "role": { "type": "string", "enum": ["user", "admin"] },
          "status": { "type": "string", "enum": ["active", "suspended", "deleted"] }
        }
      },
      "AuthTokens": {
        "type": "object",
        "properties": {
          "accessToken": { "type": "string" },
          "refreshToken": { "type": "string" }
        }
      },
      "Portfolio": {
        "type": "object",
        "required": ["id", "name", "visibility", "initialValueCents"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "visibility": { "type": "string", "enum": ["public", "unlisted", "private"] },
          "initialValueCents": { "type": "number" },
          "currentValueCents": { "type": "number" },
          "returnPercent": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Holding": {
        "type": "object",
        "required": ["id", "symbol", "exchange", "quantity", "avgPriceCents"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "symbol": { "type": "string" },
          "exchange": { "type": "string", "enum": ["NSE", "BSE"] },
          "quantity": { "type": "string" },
          "avgPriceCents": { "type": "number" },
          "currentValueCents": { "type": "number" },
          "returnPercent": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "Transaction": {
        "type": "object",
        "required": ["id", "symbol", "exchange", "quantityDelta", "priceCents", "type"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "symbol": { "type": "string" },
          "exchange": { "type": "string", "enum": ["NSE", "BSE"] },
          "quantityDelta": { "type": "string" },
          "priceCents": { "type": "number" },
          "feesCents": { "type": "number" },
          "type": { "type": "string", "enum": ["BUY", "SELL"] },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "Quote": {
        "type": "object",
        "required": ["symbol", "priceCents", "asOf"],
        "properties": {
          "symbol": { "type": "string" },
          "priceCents": { "type": "number" },
          "asOf": { "type": "string", "format": "date-time" },
          "changeCents": { "type": "number" },
          "changePercent": { "type": "number" },
          "volume": { "type": "integer" }
        }
      },
      "Candle": {
        "type": "object",
        "required": ["timestamp", "open", "high", "low", "close", "volume"],
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "open": { "type": "number" },
          "high": { "type": "number" },
          "low": { "type": "number" },
          "close": { "type": "number" },
          "volume": { "type": "integer" }
        }
      },
      "LeaderboardEntry": {
        "type": "object",
        "required": ["rank", "portfolioId", "userId", "displayName", "returnPercent"],
        "properties": {
          "rank": { "type": "integer" },
          "portfolioId": { "type": "string", "format": "uuid" },
          "userId": { "type": "string", "format": "uuid" },
          "displayName": { "type": "string" },
          "returnPercent": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "BrokerAccount": {
        "type": "object",
        "required": ["id", "broker", "accountId", "status"],
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "broker": { "type": "string", "enum": ["groww", "zerodha", "upstox"] },
          "accountId": { "type": "string" },
          "accountName": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "inactive"] },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "displayName"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 },
                  "displayName": { "type": "string", "minLength": 2 }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthTokens"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthTokens"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v2/portfolios": {
      "get": {
        "tags": ["portfolios"],
        "summary": "Get user portfolios",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of user portfolios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Portfolio"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["portfolios"],
        "summary": "Create a new portfolio",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string", "minLength": 1 },
                  "visibility": { "type": "string", "enum": ["public", "unlisted", "private"] },
                  "initialValueCents": { "type": "number", "minimum": 0 }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Portfolio created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Portfolio"
                }
              }
            }
          }
        }
      }
    },
    "/v2/portfolios/{portfolioId}": {
      "get": {
        "tags": ["portfolios"],
        "summary": "Get portfolio details",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Portfolio details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Portfolio"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["portfolios"],
        "summary": "Delete portfolio",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "204": {
            "description": "Portfolio deleted successfully"
          }
        }
      }
    },
    "/v2/portfolios/{portfolioId}/stocks": {
      "post": {
        "tags": ["holdings"],
        "summary": "Add stock to portfolio",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["symbol", "quantity"],
                "properties": {
                  "symbol": { "type": "string" },
                  "quantity": { "type": "number", "minimum": 0.01 },
                  "exchange": { "type": "string", "enum": ["NSE", "BSE"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Stock added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Holding"
                }
              }
            }
          }
        }
      }
    },
    "/v2/portfolios/{portfolioId}/stocks/{symbol}": {
      "delete": {
        "tags": ["holdings"],
        "summary": "Remove stock from portfolio",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          },
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "quantity": { "type": "number", "minimum": 0.01 }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stock removed successfully"
          }
        }
      }
    },
    "/stocks/quote/{symbol}": {
      "get": {
        "tags": ["stocks"],
        "summary": "Get stock quote",
        "parameters": [
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Stock quote",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quote"
                }
              }
            }
          }
        }
      }
    },
    "/stocks/history/{symbol}": {
      "get": {
        "tags": ["stocks"],
        "summary": "Get stock historical data",
        "parameters": [
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "interval",
            "in": "query",
            "schema": { "type": "string", "enum": ["1D", "1W", "1M", "3M", "6M", "1Y"] }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          }
        ],
        "responses": {
          "200": {
            "description": "Historical data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Candle"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/leaderboard/global": {
      "get": {
        "tags": ["leaderboard"],
        "summary": "Get global leaderboard",
        "responses": {
          "200": {
            "description": "Global leaderboard",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LeaderboardEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/leaderboard/{window}": {
      "get": {
        "tags": ["leaderboard"],
        "summary": "Get leaderboard by window",
        "parameters": [
          {
            "name": "window",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "enum": ["DAILY", "WEEKLY", "MONTHLY", "ALL"] }
          }
        ],
        "responses": {
          "200": {
            "description": "Leaderboard for window",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LeaderboardEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/broker/accounts": {
      "get": {
        "tags": ["broker"],
        "summary": "Get user broker accounts",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of broker accounts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BrokerAccount"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/broker/sync/{accountId}": {
      "post": {
        "tags": ["broker"],
        "summary": "Sync portfolio from broker",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Portfolio synced successfully"
          }
        }
      }
    }
  }
}
